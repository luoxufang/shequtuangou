      wx.pageScrollTo({
        scrollTop: 0
      })
    }
    //监听屏幕滚动 判断上下滚动
    onPageScroll (ev) {
      var _this = this;
      //判断浏览器滚动条上下滚动
      if (ev.scrollTop > 180) {
        //向下滚动
        _this.goTopDiv = true
      } else {
        //向上滚动
        _this.goTopDiv = false
      }
      _this.$apply();
    }
