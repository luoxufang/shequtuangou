      const result = await api.statisticsStore({
        query:{
          token: wx.getStorageSync('openid'),
          itemStat: itemStat?itemStat:'',
          item_id: this.options
        },
        method:"POST",
        noloading:1
      })
      if(!result.data.code){ console.log(result.data.msg) }
    }
